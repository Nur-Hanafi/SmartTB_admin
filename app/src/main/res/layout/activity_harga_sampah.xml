<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".hargaSampah"
    android:background="@color/white"
    android:fitsSystemWindows="true">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:elevation="0dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            app:navigationIcon="@drawable/baseline_arrow_back_ios_new_24"
            android:background="@color/colorPrimary"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:layout_marginEnd="20dp"
                android:layout_gravity="center"
                android:text="Harga Sampah"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />


        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:orientation="vertical">

        <LinearLayout
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:padding="10dp"
            android:background="@drawable/bg_rounded_all"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginStart="0dp"
                android:src="@drawable/baseline_info_24" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:text="Harga setiap jenis sampah dapat berubah sewaktu - waktu tanpa pemberitahuan sesuai kondisi pasar"
                android:textColor="@color/white"
                android:textSize="14sp" />

        </LinearLayout>

            <TextView
                android:id="@+id/tanggalUpdate"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Harga Terbaru Per: "
                android:textStyle="bold"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="10dp">

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:background="@drawable/bg_cardview_stroke_10dp">

                    <TableRow
                        android:background="@drawable/bg_rounded_top">

                        <TextView
                            android:layout_width="50dp"
                            android:layout_height="40dp"
                            android:layout_weight="3"
                            android:text="Harga Sampah Terbaru"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:gravity="center_horizontal"
                            />

                        <TextView
                            android:id="@+id/ubahHarga"
                            android:scrollHorizontally="true"
                            android:background="@drawable/bg_searchbar"
                            android:layout_width="50dp"
                            android:layout_height="40dp"
                            android:text="Ubah"
                            android:textColor="@color/colorPrimary"
                            android:padding="10sp"
                            android:textSize="14sp"
                            android:layout_weight="1"
                            android:textStyle="bold"
                            android:gravity="center"
                            />

                    </TableRow>

                    <TableRow
                        android:background="@drawable/bg_non_rounded">

                        <TextView
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:text="Jenis \nSampah"
                            android:textColor="@android:color/white"
                            android:padding="10sp"
                            android:textSize="14sp"
                            android:layout_weight="4"
                            android:textStyle="bold"
                            android:gravity="center_horizontal"
                            />

                        <TextView
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:text="Jumlah \n(Kg)"
                            android:textColor="@android:color/white"
                            android:padding="10sp"
                            android:textSize="14sp"
                            android:layout_weight="2"
                            android:textStyle="bold"
                            android:gravity="center_horizontal"
                            />
                        <TextView
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:text="Harga \n(Rp)"
                            android:textColor="@android:color/white"
                            android:padding="10sp"
                            android:textSize="14sp"
                            android:layout_weight="4"
                            android:textStyle="bold"
                            android:gravity="center_horizontal"
                            />
                    </TableRow>

                    <!-- Table Data -->

                    <TableRow>
                        <TextView
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:text="Kardus"
                            android:padding="10sp"
                            android:textSize="12sp"
                            android:layout_weight="4"
                            android:gravity="left"
                            android:layout_marginStart="10dp"
                            android:drawableEnd="@drawable/table_border"
                            />

                        <TextView
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:text="1"
                            android:padding="10sp"
                            android:textSize="12sp"
                            android:layout_weight="2"
                            android:gravity="center_horizontal"
                            />

                        <TextView
                            android:id="@+id/hargaKardus"
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:padding="10sp"
                            android:textSize="12sp"
                            android:layout_weight="4"
                            android:gravity="right"
                            android:layout_marginRight="20dp"
                            android:drawableLeft="@drawable/table_border"
                            />
                    </TableRow>
                    <TableRow>
                        <TextView
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:text="Botol Plastik"
                            android:padding="10sp"
                            android:textSize="12sp"
                            android:layout_weight="4"
                            android:gravity="left"
                            android:layout_marginStart="10dp"
                            android:drawableEnd="@drawable/table_border"
                            />

                        <TextView
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:text="1"
                            android:padding="10sp"
                            android:textSize="12sp"
                            android:layout_weight="2"
                            android:gravity="center_horizontal"
                            />

                        <TextView
                            android:id="@+id/hargaBotolP"
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:padding="10sp"
                            android:textSize="12sp"
                            android:layout_weight="4"
                            android:gravity="right"
                            android:layout_marginRight="20dp"
                            android:drawableLeft="@drawable/table_border"
                            />
                    </TableRow>
                    <TableRow>
                        <TextView
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:text="Duplex"
                            android:padding="10sp"
                            android:textSize="12sp"
                            android:layout_weight="4"
                            android:gravity="left"
                            android:layout_marginStart="10dp"
                            android:drawableEnd="@drawable/table_border"
                            />

                        <TextView
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:text="1"
                            android:padding="10sp"
                            android:textSize="12sp"
                            android:layout_weight="2"
                            android:gravity="center_horizontal"
                            />

                        <TextView
                            android:id="@+id/hargaDuplex"
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:padding="10sp"
                            android:textSize="12sp"
                            android:layout_weight="4"
                            android:gravity="right"
                            android:layout_marginRight="20dp"
                            android:drawableLeft="@drawable/table_border"
                            />
                    </TableRow>
                    <TableRow>
                        <TextView
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:text="Botol Kaca"
                            android:padding="10sp"
                            android:textSize="12sp"
                            android:layout_weight="4"
                            android:gravity="left"
                            android:layout_marginStart="10dp"
                            android:drawableEnd="@drawable/table_border"
                            />

                        <TextView
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:text="1"
                            android:padding="10sp"
                            android:textSize="12sp"
                            android:layout_weight="2"
                            android:gravity="center_horizontal"
                            />

                        <TextView
                            android:id="@+id/hargaBotolK"
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:padding="10sp"
                            android:textSize="12sp"
                            android:layout_weight="4"
                            android:gravity="right"
                            android:layout_marginRight="20dp"
                            android:drawableLeft="@drawable/table_border"
                            />
                    </TableRow>
                    <TableRow>
                        <TextView
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:text="Logam"
                            android:padding="10sp"
                            android:textSize="12sp"
                            android:layout_weight="4"
                            android:gravity="left"
                            android:layout_marginStart="10dp"
                            android:drawableEnd="@drawable/table_border"
                            />

                        <TextView
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:text="1"
                            android:padding="10sp"
                            android:textSize="12sp"
                            android:layout_weight="2"
                            android:gravity="center_horizontal"
                            />

                        <TextView
                            android:id="@+id/hargaLogam"
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:padding="10sp"
                            android:textSize="12sp"
                            android:layout_weight="4"
                            android:gravity="right"
                            android:layout_marginRight="20dp"
                            android:drawableLeft="@drawable/table_border"
                            />
                    </TableRow>

                </TableLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="200dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        android:visibility="gone"
        android:id="@+id/tabelUpdate"
        android:layout_gravity="center_horizontal">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:background="@drawable/bg_cardview_stroke_10dp"
            >

            <TableRow
                android:background="@drawable/bg_rounded_top">


                <TextView
                    android:scrollHorizontally="true"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:text="Ubah Harga Sampah"
                    android:textColor="@color/white"
                    android:padding="10sp"
                    android:textSize="16sp"
                    android:textAllCaps="true"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:gravity="center_horizontal"
                    />

            </TableRow>

            <!-- Table Data -->
            <TableRow
                android:background="@drawable/bg_non_rounded">

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text="Jenis \nSampah"
                    android:textColor="@android:color/white"
                    android:padding="10sp"
                    android:textSize="14sp"
                    android:layout_weight="4"
                    android:textStyle="bold"
                    android:gravity="center_horizontal"
                    />

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text="Harga Lama \n(Rp)"
                    android:textColor="@android:color/white"
                    android:padding="10sp"
                    android:textSize="14sp"
                    android:layout_weight="3"
                    android:textStyle="bold"
                    android:gravity="center_horizontal"
                    />
                <TextView
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text="Harga Baru \n(Rp)"
                    android:textColor="@android:color/white"
                    android:padding="10sp"
                    android:textSize="14sp"
                    android:layout_weight="3"
                    android:textStyle="bold"
                    android:gravity="center_horizontal"
                    />
            </TableRow>

            <TableRow>
                <TextView
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:text="Kardus"
                    android:padding="10sp"
                    android:textSize="12sp"
                    android:layout_weight="4"
                    android:gravity="left"
                    android:layout_marginStart="10dp"
                    android:drawableEnd="@drawable/table_border"
                    />

                <TextView
                    android:id="@+id/hargaKardusLama"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:padding="10sp"
                    android:textSize="12sp"
                    android:layout_weight="3"
                    android:gravity="center_horizontal"
                    android:drawableEnd="@drawable/table_border"
                    />

                <EditText
                    android:theme="@style/AppTheme"
                    android:id="@+id/et_hargaKardusUpdate"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:layout_marginRight="20dp"
                    android:inputType="number"
                    android:backgroundTint="@color/colorPrimary"
                    />
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:text="Botol Plastik"
                    android:padding="10sp"
                    android:textSize="12sp"
                    android:layout_weight="4"
                    android:gravity="left"
                    android:layout_marginStart="10dp"
                    android:drawableEnd="@drawable/table_border"
                    />

                <TextView
                    android:id="@+id/hargaBotolPLama"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:padding="10sp"
                    android:textSize="12sp"
                    android:layout_weight="3"
                    android:gravity="center_horizontal"
                    android:drawableEnd="@drawable/table_border"
                    />

                <EditText
                    android:theme="@style/AppTheme"
                    android:id="@+id/et_hargaBotolPUpdate"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:layout_marginRight="20dp"
                    android:inputType="number"
                    android:backgroundTint="@color/colorPrimary"
                    />
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:text="Duplex"
                    android:padding="10sp"
                    android:textSize="12sp"
                    android:layout_weight="4"
                    android:gravity="left"
                    android:layout_marginStart="10dp"
                    android:drawableEnd="@drawable/table_border"
                    />

                <TextView
                    android:id="@+id/hargaDuplexLama"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:padding="10sp"
                    android:textSize="12sp"
                    android:layout_weight="3"
                    android:gravity="center_horizontal"
                    android:drawableEnd="@drawable/table_border"
                    />

                <EditText
                    android:theme="@style/AppTheme"
                    android:id="@+id/et_hargaDuplexUpdate"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:layout_marginRight="20dp"
                    android:inputType="number"
                    android:backgroundTint="@color/colorPrimary"
                    />
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:text="Botol Kaca"
                    android:padding="10sp"
                    android:textSize="12sp"
                    android:layout_weight="4"
                    android:gravity="left"
                    android:layout_marginStart="10dp"
                    android:drawableEnd="@drawable/table_border"
                    />

                <TextView
                    android:id="@+id/hargaBotolKLama"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:padding="10sp"
                    android:textSize="12sp"
                    android:layout_weight="3"
                    android:gravity="center_horizontal"
                    android:drawableEnd="@drawable/table_border"
                    />

                <EditText
                    android:theme="@style/AppTheme"
                    android:id="@+id/et_hargaBotolKUpdate"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:layout_marginRight="20dp"
                    android:inputType="number"
                    android:backgroundTint="@color/colorPrimary"
                    />
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:text="Logam"
                    android:padding="10sp"
                    android:textSize="12sp"
                    android:layout_weight="4"
                    android:gravity="left"
                    android:layout_marginStart="10dp"
                    android:drawableEnd="@drawable/table_border"
                    />

                <TextView
                    android:id="@+id/hargaLogamLama"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:padding="10sp"
                    android:textSize="12sp"
                    android:layout_weight="3"
                    android:gravity="center_horizontal"
                    android:drawableEnd="@drawable/table_border"
                    />

                <EditText
                    android:theme="@style/AppTheme"
                    android:id="@+id/et_hargaLogamUpdate"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:layout_marginRight="20dp"
                    android:inputType="number"
                    android:backgroundTint="@color/colorPrimary"
                    />
            </TableRow>

            <TableRow
                android:layout_marginBottom="10dp">

                <Button
                    android:id="@+id/btnBatal"
                    android:layout_width="20dp"
                    android:layout_height="40dp"
                    android:elevation="5dp"
                    android:text="Batal"
                    android:textSize="12sp"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/white"
                    android:background="@drawable/bg_rounded_all_black"
                    android:theme="@style/AppTheme"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="30dp"/>

                <Button
                    android:layout_marginEnd="30dp"
                    android:id="@+id/simpanData"
                    android:layout_width="20dp"
                    android:layout_height="40dp"
                    android:elevation="5dp"
                    android:text="Simpan"
                    android:textSize="12sp"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bg_rounded_button"
                    android:theme="@style/AppTheme"
                    />


            </TableRow>

        </TableLayout>

    </androidx.cardview.widget.CardView>



</androidx.coordinatorlayout.widget.CoordinatorLayout>