<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="20dp"
    tools:context=".user_Profile">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <ImageButton
        android:id="@+id/updateprofile"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/update_profile"
        android:layout_alignParentRight="true" />

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ubah"
        android:textAllCaps="true"
        android:textSize="15sp"
        app:boxBackgroundColor="@color/white"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        android:layout_below="@+id/updateprofile"
        android:layout_centerHorizontal="true"
        android:layout_alignStart="@+id/updateprofile"
        />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/bg_circle"
        android:id="@+id/header"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageProfile"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_baseline_person_24" />

    </RelativeLayout>

    <TextView
        android:id="@+id/namaUser"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@id/header"
        android:text="User Name"
        android:textSize="18sp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:padding="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/bg_rounded_all"/>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@color/white"
        android:layout_marginTop="50dp"
        app:cardCornerRadius="30dp"
        android:isScrollContainer="true"
        android:layout_below="@id/header">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="ScrollViewCount">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/colorPrimary"
                android:padding="30dp">

                <ImageView
                    android:id="@+id/fotobawaan"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/fotoprofil"
                    android:visibility="gone"/>

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nomor Telepon"
                    android:textSize="15sp"
                    app:boxBackgroundColor="@color/white"
                    android:layout_marginStart="38dp"
                    android:textColor="@color/yellow"
                    android:textStyle="bold"
                    />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/nomorUser"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nomor Telepon"
                    android:text="Nomor Telepon"
                    android:textSize="15sp"
                    app:boxBackgroundColor="@color/white"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:drawableLeft="@drawable/ic_baseline_smartphone_24"
                    android:background="@drawable/bg_rounded_trans"
                    android:drawablePadding="2dp"
                    android:padding="12dp" />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:textSize="15sp"
                    app:boxBackgroundColor="@color/white"
                    android:layout_marginStart="38dp"
                    android:textColor="@color/yellow"
                    android:textStyle="bold"
                    />
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/emailUser"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Email"
                    android:text="Email"
                    android:textSize="15sp"
                    app:boxBackgroundColor="@color/white"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:drawableLeft="@drawable/ic_baseline_email_24"
                    android:drawableTint="@color/black"
                    android:drawablePadding="2dp"
                    android:background="@drawable/bg_rounded_trans"
                    android:padding="12dp" />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="jenis Kelamin"
                    android:textSize="15sp"
                    app:boxBackgroundColor="@color/white"
                    android:layout_marginStart="38dp"
                    android:textColor="@color/yellow"
                    android:textStyle="bold"
                    />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/genderUser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Jenis Kelamin"
                    android:text="Laki-laki"
                    android:textSize="15sp"
                    app:boxBackgroundColor="@color/white"
                    android:layout_marginTop="5dp"
                    android:drawableLeft="@drawable/baseline_man_24"
                    android:drawableTint="@color/black"
                    android:drawablePadding="2dp"
                    android:background="@drawable/bg_rounded_trans"
                    android:padding="12dp"
                    android:layout_marginBottom="10dp"/>




            </LinearLayout>


        </androidx.core.widget.NestedScrollView>


    </androidx.cardview.widget.CardView>

</RelativeLayout>